%h2 Billing address
= form_for @billing_address, url: billing_action(@billing_address.id) do |f|
  = f.text_field :first_name, placeholder: "First name"
  = f.text_field :last_name, placeholder: "Last name"
  = f.text_field :address, placeholder: "Address"
  = f.text_field :city, placeholder: "City"
  = f.collection_select :country_id, @countries, :id, :name
  = f.text_field :zipcode, placeholder: "Zipcode"
  = f.text_field :phone, placeholder: "Phone"
  = f.submit

%h2 Shipping address
= form_for @shipping_address, url: shipping_action(@shipping_address.id) do |f|
