%nav.navbar.navbar-default
  %div.container
    %div.navbar-header
      = link_to t('bookstore'), root_path, class: "navbar-brand"
    %div.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li{class: "#{nav_active_home}"}
          = link_to t('home'), root_url
        %li{class: "#{nav_active_shop}"}
          = link_to t('shop'), shop_url
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a#drop1.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = t('language')
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "drop1", :role => "menu"}
            %li{:role => "presentation"}
              = link_to 'English', '?locale=en'
            %li{:role => "presentation"}
              = link_to 'Русский', '?locale=ru'
        %li
          = link_to "#{t('cart')} #{cart_status}", cart_url
        -if user_signed_in?
          %li
            = link_to t('orders.orders'), orders_url
          %li
            = link_to t('settings'), edit_user_registration_url
          %li
            = link_to t('sign_out'), destroy_user_session_path, :method => :delete
        -else
          %li
            = link_to t('sign_in'), new_user_session_path
          %li
            #{link_to t('sign_up'), new_user_registration_path}