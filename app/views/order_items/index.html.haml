-@items.each do |value|
  .row
    .col-xs-2
      = image_tag value.book.image.thumb, class: "img-thumbnail"
    .col-xs-6
      %b= value.book.title
      %br
      = value.book.short_description
    .col-xs-1.book-price
      %b= "$#{value.book.price}"
    .col-xs-2
      = form_for(value, method: "put", html: {class: "form-inline"}) do |f|
        .form-group
          = f.number_field :quantity, class: "form-control", style: "width: 50px;", value: value.quantity
          = f.hidden_field :book_id,  value: value.book.id
          = f.submit "up", class: "btn btn-default"
    .col-xs-1.book-price
      %b= "$#{value.price}"
      = link_to order_item_url(value.id), method: :delete, class: "close" do
        %span{"aria-hidden" => "true"} &times
.row
  .col-xs-10
  .col-xs-2

.row
  .col-xs-9
    = link_to "empty cart", order_item_url(:all), method: :delete, class: "btn btn-default"
    = link_to "continue shopping", shop_url, class: "btn btn-default"
  .col-xs-3
    = link_to "update", "#", class: "btn btn-default"
    = link_to "checkout", checkout_path(:billing_address), class: "btn btn-default"